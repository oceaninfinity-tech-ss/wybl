{
    "compilerOptions": {
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "target": "es2017",
        "module": "es2015",
        "lib": [
            "es2017",
            "DOM"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "ts/**/*"
    ]
}